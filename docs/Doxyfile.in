PROJECT_NAME           = "curend"
PROJECT_NUMBER         = @PROJECT_VERSION@
PROJECT_BRIEF          = "CUDA-accelerated Gaussian splatting library"
OUTPUT_DIRECTORY       = @DOXYGEN_OUTPUT_DIR@

# Input configuration
INPUT                  = @CMAKE_SOURCE_DIR@/include/curend/camera/fisheye.h \
                         @CMAKE_SOURCE_DIR@/include/curend/camera/pinhole.h \
                         @CMAKE_SOURCE_DIR@/include/curend/camera/orthogonal.h \
                         @CMAKE_SOURCE_DIR@/include/curend/camera/shutter.h \
                         @CMAKE_SOURCE_DIR@/include/curend/estimator/ghq.h \
                         @CMAKE_SOURCE_DIR@/include/curend/estimator/ut.h

# Basic documentation settings
EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO

# Output format
GENERATE_LATEX         = NO
GENERATE_HTML          = YES
GENERATE_XML           = YES
XML_OUTPUT             = xml
XML_PROGRAMLISTING     = YES

# Preprocessor
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = YES
PREDEFINED            += __host__= __device__= GSPLAT_HOST_DEVICE=

# C++ settings
CXX_OPTIONS           = -std=c++17

# Documentation structure
GENERATE_TREEVIEW      = NO
GENERATE_CLASS_DIAGRAM = NO
GENERATE_CLASS_GRAPH   = NO
GENERATE_CALL_GRAPH    = NO
GENERATE_CALLER_GRAPH  = NO

# Documentation content
HIDE_UNDOC_MEMBERS     = YES
HIDE_UNDOC_CLASSES     = YES
REPEAT_BRIEF           = YES
BRIEF_MEMBER_DESC      = YES 